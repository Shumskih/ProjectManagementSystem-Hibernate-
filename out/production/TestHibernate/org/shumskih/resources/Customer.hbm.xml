<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.shumskih.model.Customer" table="customers">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>

        <set name="projects" table="customers_projects" lazy="false">
            <key column="customer_id" not-null="true"/>
            <many-to-many column="project_id" class="org.shumskih.model.Project" lazy="false"/>
        </set>
    </class>
</hibernate-mapping>